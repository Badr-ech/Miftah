generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String                 @id @default(uuid()) @db.Uuid
  name                  String                 @db.VarChar(255)
  email                 String                 @unique @db.VarChar(255)
  emailVerified         DateTime?              @db.Timestamp(6)
  password              String?                @db.VarChar(255)
  avatarUrl             String?                @db.VarChar(255)
  role                  UserRole               @default(STUDENT)
  createdAt             DateTime               @default(now()) @db.Timestamp(6)
  updatedAt             DateTime               @default(now()) @updatedAt @db.Timestamp(6)
  announcements         Announcement[]
  assignmentSubmissions AssignmentSubmission[]
  teacherCourses        Course[]               @relation("TeacherCourses")
  enrolledCourses       CourseEnrollment[]
  receivedMessages      Message[]              @relation("ReceivedMessages")
  sentMessages          Message[]              @relation("SentMessages")
}

model Course {
  id            String             @id @default(uuid()) @db.Uuid
  title         String             @db.VarChar(255)
  description   String
  category      String             @db.VarChar(50)
  imageUrl      String?            @db.VarChar(255)
  createdAt     DateTime           @default(now()) @db.Timestamp(6)
  updatedAt     DateTime           @default(now()) @updatedAt @db.Timestamp(6)
  teacherId     String             @db.Uuid
  announcements Announcement[]
  assignments   Assignment[]
  teacher       User               @relation("TeacherCourses", fields: [teacherId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  enrollments   CourseEnrollment[]
  materials     CourseMaterial[]

  @@index([teacherId], map: "idx_course_teacher_id")
}

model CourseEnrollment {
  id           String   @id @default(uuid()) @db.Uuid
  enrolledAt   DateTime @default(now()) @db.Timestamp(6)
  lastAccessed DateTime @default(now()) @db.Timestamp(6)
  progress     Float    @default(0)
  userId       String   @db.Uuid
  courseId     String   @db.Uuid
  course       Course   @relation(fields: [courseId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([userId, courseId])
  @@index([courseId], map: "idx_enrollment_course_id")
  @@index([userId], map: "idx_enrollment_user_id")
}

model CourseMaterial {
  id         String       @id @default(uuid()) @db.Uuid
  title      String       @db.VarChar(255)
  type       MaterialType
  url        String?      @db.VarChar(255)
  content    String?
  uploadedAt DateTime     @default(now()) @db.Timestamp(6)
  courseId   String       @db.Uuid
  course     Course       @relation(fields: [courseId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([courseId], map: "idx_material_course_id")
}

model Assignment {
  id          String                 @id @default(uuid()) @db.Uuid
  title       String                 @db.VarChar(255)
  description String
  dueDate     DateTime               @db.Timestamp(6)
  totalPoints Int?
  createdAt   DateTime               @default(now()) @db.Timestamp(6)
  updatedAt   DateTime               @default(now()) @updatedAt @db.Timestamp(6)
  courseId    String                 @db.Uuid
  course      Course                 @relation(fields: [courseId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  submissions AssignmentSubmission[]

  @@index([courseId], map: "idx_assignment_course_id")
}

model AssignmentSubmission {
  id           String           @id @default(uuid()) @db.Uuid
  submittedAt  DateTime         @default(now()) @db.Timestamp(6)
  grade        String?          @db.VarChar(10)
  status       SubmissionStatus @default(PENDING)
  content      String?
  feedback     String?
  assignmentId String           @db.Uuid
  studentId    String           @db.Uuid
  assignment   Assignment       @relation(fields: [assignmentId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  student      User             @relation(fields: [studentId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([assignmentId, studentId])
  @@index([assignmentId], map: "idx_submission_assignment_id")
  @@index([studentId], map: "idx_submission_student_id")
}

model Message {
  id         String   @id @default(uuid()) @db.Uuid
  content    String
  sentAt     DateTime @default(now()) @db.Timestamp(6)
  isRead     Boolean  @default(false)
  senderId   String   @db.Uuid
  receiverId String   @db.Uuid
  receiver   User     @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  sender     User     @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([receiverId], map: "idx_message_receiver_id")
  @@index([senderId], map: "idx_message_sender_id")
}

model Announcement {
  id        String   @id @default(uuid()) @db.Uuid
  title     String   @db.VarChar(255)
  content   String
  createdAt DateTime @default(now()) @db.Timestamp(6)
  authorId  String   @db.Uuid
  courseId  String   @db.Uuid
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([authorId], map: "idx_announcement_author_id")
  @@index([courseId], map: "idx_announcement_course_id")
}

model StudentProgress {
  id                   String   @id @default(uuid()) @db.Uuid
  completedAssignments Int      @default(0)
  totalAssignments     Int      @default(0)
  overallGrade         String?  @db.VarChar(10)
  lastUpdated          DateTime @default(now()) @db.Timestamp(6)
  userId               String   @unique @db.Uuid
  courseId             String   @db.VarChar(255)

  @@unique([userId, courseId])
}

enum UserRole {
  STUDENT
  TEACHER
  ADMIN

  @@map("user_role")
}

enum MaterialType {
  FILE
  VIDEO
  LINK
  TEXT

  @@map("material_type")
}

enum SubmissionStatus {
  PENDING
  SUBMITTED
  GRADED
  LATE

  @@map("submission_status")
}
